<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.NFTMarketplace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">
            ?attr/colorPrimaryVariant
        </item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="Theme.NFTMarketplace.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NFTMarketplace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NFTMarketplace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="txtColor">
        <item name="android:textColor">@color/dark_500</item>
        <item name="android:tint">@color/dark_500</item>
    </style>

    <style name="txtColorBlue">
        <item name="android:textColor">@color/dark_500</item>
        <item name="android:tint">@color/dark_500</item>
    </style>

    <style name="txtColorSecondary">
        <item name="android:textColor">@color/grey</item>
        <item name="android:tint">@color/grey</item>
    </style>

    <style name="backgroundColor">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="backgroundColorSecondary">
        <item name="android:background">@color/bg_gray</item>
        <item name="android:backgroundTint">@color/bg_gray</item>
    </style>

    <style name="backgroundColorBlue">
        <item name="android:background">@color/dark_500</item>
        <item name="android:backgroundTint">@color/dark_500</item>
    </style>


</resources>